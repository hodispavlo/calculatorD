<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="calculatorHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">165dp</item>
        <item name="android:textColor">@color/primary_800</item>
        <item name="android:padding">25dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/primary_100</item>
    </style>

    <style name="calculatorInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primary_800</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="calculatorRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/primary_100</item>
    </style>

    <style name="calculatorActionButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/primary</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/primary_100</item>
    </style>

    <style name="calculatorResultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/primary_800</item>
    </style>
</resources>